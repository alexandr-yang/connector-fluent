	Параметры = Новый Структура;
	Параметры.Вставить("ИдентификаторКлючаДоступа", "");
	Параметры.Вставить("Пароль", "");
	Параметры.Вставить("Пользователь", "");
	Параметры.Вставить("Регион", "");
	Параметры.Вставить("СекретныйКлюч", "");
	Параметры.Вставить("Сервис", "");
	Параметры.Вставить("Тип", "");
	Параметры.Вставить("Токен", "");
	Возврат Параметры;
	
